<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_margin="5dp"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:gravity="center">

            <com.example.dipon.tabviewdemo.main.UI_utility.RoundedImageView
                android:id="@+id/contact_profile_pic"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/account_circle" />

            <TextView
                android:id="@+id/contact_name_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_above="@+id/contact_number_text"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/contact_profile_pic"
                android:layout_toRightOf="@+id/contact_profile_pic"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:text="Demo demo"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contact_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contact_name_text"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/contact_name_text"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:text="Mononc' J"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/icon_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:clickable="true"
                android:padding="16dp"
                app:srcCompat="@drawable/tonality"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>