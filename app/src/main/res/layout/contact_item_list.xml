<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/list_container"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_margin="6dp">

            <ImageView
                android:id="@+id/contact_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                app:srcCompat="@drawable/account_circle"
                android:layout_alignTop="@+id/icon_logo"
                android:layout_alignBottom="@+id/icon_logo" />

            <TextView
                android:id="@+id/contact_name_text"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="68dp"
                android:layout_marginEnd="68dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:paddingBottom="5dp"
                android:paddingTop="4dp"
                android:text="Demo demo"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/contact_profile_pic"
                android:layout_toRightOf="@+id/contact_profile_pic"/>

            <TextView
                android:id="@+id/contact_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="68dp"
                android:layout_marginEnd="68dp"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp"
                android:text="Mononc' J"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/contact_name_text"
                android:layout_toRightOf="@+id/contact_profile_pic"
                android:layout_toEndOf="@+id/contact_profile_pic" />

            <ImageView
                android:id="@+id/icon_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="16dp"
                app:srcCompat="@drawable/tonality" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>